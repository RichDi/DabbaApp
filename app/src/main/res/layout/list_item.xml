<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/colorPrimaryDark"
    android:padding="8dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:elevation="1dp"
        android:layout_weight="6.03">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimaryInverseDisableOnly"
                    android:textSize="24sp"
                    android:text="Ricardo Delgado"
                    android:layout_weight="1" />

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/hour_tv"
                    android:text="07:00"
                    android:textSize="24sp"
                    android:textIsSelectable="false"
                    android:textColor="?android:attr/textColorPrimaryInverseDisableOnly"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp">

                <TextView
                    android:text="Precio: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textColor="@color/cast_expanded_controller_text_color"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cast_expanded_controller_text_color"
                    android:text="100$"
                    android:textSize="16sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp">

                <TextView
                    android:text="Estado:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textColor="@color/cast_expanded_controller_text_color"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dip"
                    android:textColor="@color/cast_expanded_controller_text_color"
                    android:text="Pendiente"
                    android:textSize="16sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="Pedido: 2016-10-20 05:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/cast_expanded_controller_text_color"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:id="@+id/created_time" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
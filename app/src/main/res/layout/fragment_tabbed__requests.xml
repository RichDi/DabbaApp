<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.drdr_.dabbaapp.Tabbed_Requests$PlaceholderFragment"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:elevation="1dp"
        android:layout_weight="0.53">

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/hour_tv"
            android:text="07:00"
            android:textSize="30sp"
            android:textIsSelectable="false"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="80dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Pedido: 2016-10-20 05:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:id="@+id/created_time" />

            <TextView
                android:id="@+id/customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"
                android:text="Ricardo Delgado"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:text="100$"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:text="Pendiente"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="Paquetes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/lista_paquetes" />

    <TextView
        android:text="Individuales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lista"
        android:layout_height="150dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</LinearLayout>
